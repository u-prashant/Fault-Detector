<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/imageView"
        android:visibility="gone" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:text="Choose Image"
        android:layout_marginTop="15dp"
        android:id="@+id/chooseBn" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chooseBn"
        android:text="Upload Image"
        android:layout_marginTop="15dp"
        android:id="@+id/uploadBn" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uploadBn"
        android:text="IPv4 Address"
        android:layout_marginTop="15dp"
        android:id="@+id/ipaddr"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ipaddr"
        android:layout_marginTop="10dp"
        android:id="@+id/IPAddress"
        android:text="192.168.43.127" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IPAddress"
        android:layout_marginTop="15dp"
        android:text="Port Number"
        android:id="@+id/port" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/port"
        android:layout_marginTop="10dp"
        android:id="@+id/portNumber"
        android:text="5000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/portNumber"
        android:layout_marginTop="15dp"
        android:id="@+id/result"
        android:textAlignment="center"
        android:textSize="15pt"
        android:visibility="gone"/>

</RelativeLayout>